#!/usr/bin/env bash
set -euo pipefail

IN="${1:-sample_reports}"
mkdir -p out/summaries
if [ ! -f out/tasks.csv ]; then
  echo "patient_id,report_date,modality,body_part,finding,recommended_followup,timeframe,due_by,priority,source_pdf,page,confidence" > out/tasks.csv
fi

python3 wrangler.py "$IN"

echo
echo "âœ… Processed. Outputs:"
echo " - out/tasks.csv"
echo " - out/summaries/*.md"
echo " - out/risk_dashboard.json"
echo
echo "ðŸ”Ž Entering interactive QA mode. Type 'help' for commands."
python3 wrangler.py --qa
